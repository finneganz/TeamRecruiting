<% provide(:button_text, 'Create Topic') %>

<h1>トピック一覧</h1>
<ul>
    <% @topics.each do |topic| %>
        <li>
            <%= link_to topic.title, topics_show_path(topic.id) %>
            <%= link_to "削除", topics_delete_path(topic.id),
            method: :delete, data: {confirm: "削除してもよろしいですか？"} , class:"btn btn-primary" %>
        </li>
    <% end %>
</ul>

<h1>トピック新規作成</h1>
<%= form_for @newTopic, :url => {:action => 'create'} do |f| %>
    <%= f.text_field :title %>
    <%= f.submit yield(:button_text), class:"btn btn-primary" %>
<% end %>



